{
  "name": "state-guard",
  "version": "4.2.0",
  "description": "Type-safe, deterministic state management featuring state machines and automatic stale snapshot invalidation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/state-guard.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "exports": "./lib/mod.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "size:check": "size-limit",
    "start": "node example.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@jest/globals": "^29.7.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@swc/core": "^1.4.1",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "globals": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "size-limit": "^11.0.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.1"
  },
  "size-limit": [
    {
      "name": "brotli compression",
      "limit": "463 B",
      "path": "./lib/mod.js",
      "brotli": true
    },
    {
      "name": "gzip compression",
      "limit": "511 B",
      "path": "./lib/mod.js",
      "gzip": true
    },
    {
      "name": "no compression",
      "limit": "463 B",
      "path": "./lib/mod.js",
      "gzip": false
    }
  ],
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
